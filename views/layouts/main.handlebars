    <body>
        <nav style="background-color: #b89685">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img
                        src="assets/images/logo.jpeg"
                        alt="Logo"
                        width="40"
                        height="40"
                    />
                    Linguify
                </a>
            </div>
            {{#if logged_in}}
            <button id="logout" type="button" class="btn btn-danger" id="log-button">
                Logout
            </button>
            {{else}}
            <p>Don't have an account? Sign-up here!</p>
            <button type="button" class="btn btn-danger" id="signup-button">
                Signup
            </button>
            <p>Already have an account? Login here!</p>
            <button type="button" class="btn btn-danger" id="login-button">
                Login
            </button>
            {{/if}}
        </nav>

        {{{body}}}
        
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
